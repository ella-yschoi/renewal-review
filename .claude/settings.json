{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          { "type": "command", "command": ".claude/hooks/require-experiment-log.sh", "timeout": 10 },
          { "type": "command", "command": ".claude/hooks/require-design-doc.sh", "timeout": 10 }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          { "type": "command", "command": ".claude/hooks/lint-on-save.sh", "timeout": 30 },
          { "type": "command", "command": ".claude/hooks/remind-design-doc.sh", "timeout": 10 }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          { "type": "command", "command": ".claude/hooks/log-commit.sh", "timeout": 10 }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          { "type": "command", "command": ".claude/hooks/verify-completion.sh", "timeout": 10 }
        ]
      }
    ]
  }
}
